{
  "name": "@47ng/chakra-next",
  "version": "0.0.0-semantically-released",
  "description": "Design System for React, based on Chakra UI + Next.js, written in TypeScript.",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/chakra-next"
  },
  "keywords": [
    "react",
    "design-system",
    "next.js",
    "chakra-ui"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s build test"
  },
  "dependencies": {},
  "peerDependencies": {
    "@chakra-ui/core": "^0.7.0",
    "@emotion/core": "*",
    "@emotion/styled": "*",
    "emotion-theming": "*",
    "next": "^9.x",
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@chakra-ui/core": "^0.7.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^14.0.0",
    "commitlint": "^8.3.5",
    "emotion-theming": "^10.0.27",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "next": "^9.3.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
